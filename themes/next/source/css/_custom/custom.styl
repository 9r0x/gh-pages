.menu .menu-item .fa {
  margin-right: 0;
}
.site-search form {
  display: none;
}
.links-of-blogroll-inline .links-of-blogroll-item {
  display: inline-block;
}
.headband {
  height: 1.5px;
  background-image: linear-gradient(90deg, #0fb9b1 0%, #20bf6b 100%);
}
.brand {
  background-color: rgba(255,255,255,0);
}
.posts-expand {
  padding-top: 10px;
}
.header-inner {
  margin: 0 auto;
  padding: 70px 0 10px;
  width: 700px;
}
.site-title {
  font-size: 36px;
  color: rgba(38,222,129,0.3);
  text-shadow: 0 0 30px #20bf6b;
  white-space: nowrap;
}
.site-subtitle {
  font-weight: bold;
  color: rgba(38,222,129,0.08);
  text-shadow: 0 0 30px #20bf6b;
}
.posts-expand .post-body img {
  border: none;
  padding: 0px;
}
.post-gallery .post-gallery-img img {
  padding: 3px;
}
.sidebar-toggle {
  right: 10px;
  box-shadow: 0px 0px 10px 0px #20bf6b;
}
.page-post-detail .sidebar-toggle-line {
  background: #fff;
}
.back-to-top {
  right: 10px;
  box-shadow: 0px 0px 10px 0px #20bf6b;
}
.back-to-top.back-to-top-on {
  bottom: 15px;
}
.feed-link a {
  color: #fff;
  border: 1px solid #20bf6b !important;
  border-radius: 15px;
}
.feed-link a:hover {
  background-color: #20bf6b;
}
.feed-link a i {
  color: #fff;
}
.sidebar-nav .sidebar-nav-active {
  color: #20bf6b;
  border-bottom-color: #20bf6b;
}
.sidebar-nav .sidebar-nav-active:hover {
  color: #26de81;
  border-bottom-color: #26de81;
}
.post-toc .nav .active > a {
  color: #20bf6b;
  border-bottom-color: #20bf6b;
}
.post-toc .nav .active-current > a:hover {
  color: #26de81;
  border-bottom-color: #26de81;
}
::selection {
  background-color: rgba(32,191,107,0.6);
  color: #fff;
}
@media (max-width: 760px) {
  .site-title {
    font-size: 20px;
  }
  .site-meta {
    width: 100vw;
  }
}